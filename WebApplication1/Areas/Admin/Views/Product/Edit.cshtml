@model Product //DEPENDENCY INJECTION

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Product</h2>
        </div>

        <div asp-validation-summary="ModelOnly">
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <Input asp-for="Title" type="text" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Description" class="p-0"></label>
            <textarea asp-for="Description" type="text" class="form-control"><</textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ISBN" class="p-0"></label>
            <Input asp-for="ISBN" type="text" class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Author" class="p-0"></label>
            <Input asp-for="Author" type="text" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ListPrice" class="p-0"></label>
            <Input asp-for="ListPrice" type="text" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Price" class="p-0"></label>
            <Input asp-for="Price" type="text" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Price50" class="p-0"></label>
            <Input asp-for="Price50" type="text" class="form-control" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Price100" class="p-0"></label>
            <Input asp-for="Price100" type="text" class="form-control" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6" col-md-3>
                <button type="submit" class="btn btn-primary form-control" style="width:150px">Update</button>
            </div>

            <div class="col-6" col-md-3>
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control" style="width:150px">Back to List</a>
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}